



<div class = "contain">
<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= @furniture.item %><br>

                    <small><%= @furniture.disc %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Project One -->
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <%= image_tag @furniture.img_file %>
                </a>
            </div>
            <div class="col-md-5">
                <h3></h3>
                <h4>Description</h4>

                <p><%= @furniture.description %></p>
                <ul>
                  <li>Price: $<%= @furniture.price %> </li>
                  <li>Condition: <%= @furniture.condition %></li>
                  <li>Width: <%= @furniture.dimension_w %></li>
                  <li>Length: <%= @furniture.dimension_l %></li>
                  <li>Height: <%= @furniture.dimension_h %></li>
                </ul>
                <a class="btn btn-primary" href="/">Add to cart <i class="fa fa-shopping-cart"></i></a>
            </div>
        </div>


  <hr>

<footer>
    <div class="row">
        <div class="col-lg-12">
            <p>Copyright &copy; Mallory's Furniture</p>
        </div>
    </div>
    <!-- /.row -->
</footer>
</div>

<!-- /.container -->

